- provide(:title, "EDIT #{@user.optional_id}")
= render "layouts/errors", obj: @user
.hr-container
  h1 EDIT PAGE
  = form_for(@user) do |f|
    - if @user.avatar? 
      = image_tag @user.avatar.to_s
    - else
      = image_tag asset_path("default.jpg"), :size => '100x100'
    br
    = f.file_field :avatar
    br
    = f.label :name
    = f.text_field :name
    br
    = f.label 'ID'
    = f.text_field :optional_id
    br
    = f.label :introduction
    br
    = f.text_area :introduction ,class: 'big'
    br
    = f.submit '編集する', class: 'btn'
