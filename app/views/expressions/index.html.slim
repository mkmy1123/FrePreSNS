- if params[:argument_id].present?
  - argument = find_argument(params[:argument_id])
  h1.headline Argument is
  h1.center = link_to argument.topic,argument_path(argument)
  .center= link_to ">> 一覧に戻す", expressions_path
- elsif params[:check].present?
  h1.headline CHECK済み ARGUMENT
  .center= link_to ">> 一覧に戻す", expressions_path
- else
  h1.headline ALL EXPRESSIONS
.content-box.window
    p \ こちらから議論を限定できます /
    = form_with method: :get,local: true do |f|
      = f.label "論点 : "
      = f.select(:argument_id, options_from_collection_for_select(Argument.all, :id, :topic),include_blank: true,class: "window")
      = f.submit "GO" ,class: 'btn'
    - if user_signed_in?
      = form_with method: :get,local: true do |f|
        span CHECK済みのARGUMENTに限定する
        = f.hidden_field :check, value: current_user.id
        = f.submit "GO" ,class: 'btn'

.container
  .expression-box.positive-box
    h3.label.positive.center POSITIVE EXPRESSION
    h4.center << 肯定的 >>
    br
    - if params[:argument_id].present?
      = render "expression", expressions: positive(argument.expressions).page(params[:page]).per(5)
    - elsif params[:check].present?
      = render "moreexpression", expressions: positive(get_expressions(current_user.checked_arguments)).page(params[:page]).per(5)
    - else
      = render "moreexpression", expressions: positive(@expressions).page(params[:page]).per(5)

  .expression-box.neutral-box
    h3.label.neutral.center NEUTRAL EXPRESSION
    h4.center << 中立 >>
    br
    - if params[:argument_id].present?
      = render "expression", expressions: neutral(argument.expressions).page(params[:page]).per(5)
    - elsif params[:check].present?
      = render "moreexpression", expressions: neutral(get_expressions(current_user.checked_arguments)).page(params[:page]).per(5)
    - else
      = render "moreexpression", expressions: neutral(@expressions).page(params[:page]).per(5)

  .expression-box.negative-box
    h3.label.negative.center NEGATIVE EXPRESSION
    h4.center << 否定的 >>
    br
    - if params[:argument_id].present?
      = render "expression", expressions: negative(argument.expressions).page(params[:page]).per(5)
    - elsif params[:check].present?
      = render "moreexpression", expressions: negative(get_expressions(current_user.checked_arguments)).page(params[:page]).per(5)
    - else
      = render "moreexpression", expressions: negative(@expressions).page(params[:page]).per(5)
